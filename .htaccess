# Block direct access to PHP files other than index.php and validate.php
<FilesMatch "\.(php|phtml|php3|php4|php5|php7)$">
    Order deny,allow
    Deny from all
    Allow from 127.0.0.1
    Allow from ::1
</FilesMatch>

# Allow only index.php and validate.php
<Files "index.php">
    Order allow,deny
    Allow from all
</Files>

<Files "validate.php">
    Order allow,deny
    Allow from all
</Files>

# Prevent directory listing
Options -Indexes

# Prevent access to sensitive files
<FilesMatch "^\.(htaccess|htpasswd|git|svn|env|config|json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent access to backup and temporary files
<FilesMatch "(^#.*#|~$|\.bak$|\.tmp$|\.swp$|\.log$)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Abilita la compressione per migliorare le prestazioni
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml application/xml application/json
</IfModule>

# Imposta header di sicurezza
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net 'unsafe-inline';"
    # Cache control per file statici
    <FilesMatch "\.(html|css|js|png|jpg|jpeg|gif|ico)$">
        Header set Cache-Control "max-age=86400, public"
    </FilesMatch>
</IfModule>

# Proteggi dalle richieste di tipo TRACE
RewriteEngine On
RewriteCond %{REQUEST_METHOD} ^TRACE
RewriteRule .* - [F]

# Forza HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Limita la dimensione dei file upload (5MB)
LimitRequestBody 5242880

# Imposta il timeout per le richieste PHP
<IfModule mod_php.c>
    php_value max_execution_time 30
    php_value post_max_size 6M
    php_value upload_max_filesize 5M
    php_value memory_limit 128M
</IfModule>